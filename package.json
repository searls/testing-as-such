{
  "name": "testing-as-such",
  "version": "1.0.0",
  "description": "A little book on testing",
  "private": true,
  "scripts": {
    "start": "gitbook serve",
    "compile": "rm -rf dist && npm run compile:html && npm run ebook",
    "compile:html": "gitbook build . dist",
    "ebook": "mkdir -p dist/ebook && npm run ebook:pdf && npm run ebook:epub && npm run ebook:mobi",
    "ebook:pdf": "gitbook pdf . dist/ebook/testing-as-such.pdf",
    "ebook:epub": "gitbook pdf . dist/ebook/testing-as-such.epub",
    "ebook:mobi": "gitbook pdf . dist/ebook/testing-as-such.mobi"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/searls/testing-as-such.git"
  },
  "author": "Justin Searls <searls@gmail.com>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/searls/testing-as-such/issues"
  },
  "homepage": "https://github.com/searls/testing-as-such#readme",
  "dependencies": {
    "gitbook": "^3.2.3",
    "gitbook-cli": "^2.3.2"
  }
}
